generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int  @id @default(autoincrement())
  firstName  String 
  lastName   String
  email      String @unique()
  address    String
  
  
  wallet    Wallet?
  transactions  Transaction[]

}

model Wallet  {
  id    Int  @id @default(autoincrement())
  userId Int @unique()
  balance Int
  transactionPin   Int


  user User   @relation(fields: [userId], references: [id])
  transactions  Transaction[]
}


model Transaction {
  id     Int  @id @default(autoincrement())
  userId   Int
  amount   Int
  walletId Int



  wallet   Wallet  @relation(fields:walletId, references: id)


  user User    @relation(fields: userId, references: id)

}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
